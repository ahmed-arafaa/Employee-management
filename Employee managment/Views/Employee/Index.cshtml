@using EmployeeMangement.Domain.Entites
@model IList<Employee>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Table</title>
	
	<link href="~/css/emptable.css" rel="stylesheet" />
</head>
<body>
    <table class="employee-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Position</th>
                <th>Department</th>
                <th>Salary</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Position</td>
                    <td>@item.Department?.Name</td> 
                    <td>@item.Salary</td>
                    <td>
                        <button class="edit-btn" onclick="editEmployee(@item.Id)">Edit</button>
                        <button class="delete-btn" onclick="deleteEmployee(@item.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        function editEmployee(id) {
            
            window.location.href = `/Employee/Edit/${id}`;
        }

        function deleteEmployee(id) {
        
            if (confirm("Are you sure you want to delete this employee?")) {
                window.location.href = `/Employee/Delete/${id}`;
            }
        }
    </script>
</body>
</html>
